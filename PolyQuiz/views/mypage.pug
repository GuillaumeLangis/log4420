extends layout

block head
	link(href='/css/mypage.css', rel='stylesheet')

block content
	article(id='main-wrapper')
		div(id='description')
			section#instructions.single-cell
				div(class='mypage-label') Instructions
				a(class='mypage-link', href='instructions')
					div >
			section#quicktest.single-cell
				div(class='mypage-label') Tests Rapides
				a(class='mypage-link', href='quicktest') 
					div Nouveau Test Rapide
			section#fulltest.single-cell
				div(class='mypage-label') Examens
				div.mypage-label#exam-type
					select
						option(name='HTML') HTML
						option(name='CSS') CSS
						option(name='Javascript') Javascript
				a(class='mypage-link', href='/test')
					div Commencer
			section#Results.multi-cell
				div.multi-cell-wrapper
					div.multi-cell-header Resultats
					div.multi-cell-content
						label Moyenne - 
						span#average 100%
						br
						label Tests Rapides - 
						span#quicktest-count 2
						br
						label Examens - 
						span#test-count 1
						br
					div.multi-cell-header Examens Precedents
					div.multi-cell-content
						table
							tbody
								tr
									td.results-label Test Rapide 1
									td.results-value 60%
								tr
									td.results-label Test Rapide 2
									td.results-value 30%
								tr
									td.results-label Test Rapide 3
									td.results-value 30%
								tr
									td.results-label Test Rapide 4
									td.results-value 30%
								tr
									td.results-label Examen
									td.results-value 100%