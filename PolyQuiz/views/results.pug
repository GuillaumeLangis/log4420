extends layout

block head
	link(href='/css/question.css', rel='stylesheet')
	script(type='text/javascript' src='js/results.js')
		

block content
	article(id='main-wrapper')
		h1 Examen

		section.results#question
			h1 Examen Terminé
			span#result
			div#clear
			section#quiz-navig
				div#next.quiz-navig-btn
					a(href='/mypage') 
						div Terminer
				div#closer
		section#statistics
			div#statistics-content
				h1 Statistiques
				h1 Tests passés
				table
					tr
						td Total
						td#stats-quicktests
				h1 Examens passés
				table
					tr
						td CSS
						td#stats-exams-css
					tr
						td HTML
						td#stats-exams-html
					tr
						td JS
						td#stats-exams-js
					tr.total
						td Moyenne totale
						td#stats-exams-average